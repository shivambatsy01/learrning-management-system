<body style="background-color: #b8bad6;">

  <div>
    <!--Validation Errors-->
    <div class="container" style="margin-top: 4%;">
      {{#if errors}}
        {{#each errors}}
          <div class="alert alert-danger" role="alert">
            {{msg}}
          </div>
        {{/each}}
      {{/if}}
    </div>
    <div class="row justify-content-center">
     <div class="col-md-5 box-wrapper">
       <h1>Sign Up</h1>
         <form action="/users/signup" method="post">
           <div class="form-group">
             <label>Account Type</label>
             <br />
             <select name="type">
               <option value="student">Student</option>
               <option value="instructor">Instructor</option>
             </select>
           </div>
           <div class="form-group">
             <label for="name">First Name</label>
             <input type="text" id="username" name="first_name" class="form-control" value="{{first_name}}">
           </div>
           <div class="form-group">
             <label for="name">Last Name</label>
             <input type="text" id="username" name="last_name" class="form-control" value="{{last_name}}">
           </div>
           <div class="form-group">
             <label for="email">E-mail</label>
             <input type="text" id="email" name="email" class="form-control" value="{{email}}">
           </div>
           <div class="form-group">
             <label for="name">Username</label>
             <input type="text" id="username" name="username" class="form-control" value="{{username}}">
           </div>
           <div class="form-group">
             <label for="password">Password</label>
             <input type="password" id="password" name="password" class="form-control" value="{{password}}">
           </div>
           <div class="form-group">
             <label for="password2">Confirm Password</label>
             <input type="password" id="password2" name="password2" class="form-control" value="{{password2}}">
           </div>
           <button type="submit" class="btn btn-custom">Sign Up</button>
         </form>
         <br />
         <p>Already have an account? <a href="/users/signin" class="cool-link">Sign In</a></p>
        </div>
       </div>
    </div>
  </div>
  <footer>
    {{> footer}}
  </footer>
</body>
